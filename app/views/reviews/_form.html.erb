<%= simple_form_for @review do |f| %>

  <% if @review.errors.any? %>
    <div class="errors">
      <% @review.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <p>
    <%= f.input :title %>
    <%= f.input :restaurant %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :phone_number %>
    <%= f.input :price %>
    <%= f.input :ambiance %>
    <%= f.input :cuisine %>
    <%= f.input :body %>
    <%= f.input :score %>
    <%= f.button :submit, "add review" %>
  </p>
<% end %>
